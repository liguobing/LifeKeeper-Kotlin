<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="20dp"
    android:paddingEnd="30dp"
    android:paddingBottom="20dp">

    <EditText
        android:id="@+id/et_input_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_bill___dialog___add_menu___edit"
        android:hint="@string/add_bill_drawer_dialog_hint"
        android:inputType="text"
        android:theme="@style/NoBottomLineEditText" />

    <Button
        android:id="@+id/bt_submit_add_menu"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/et_input_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:background="@drawable/add_bill___dialog___add_menu___button"
        android:text="@string/add_bill_drawer_dialog_submit"
        android:textColor="#000000" />

</RelativeLayout>