<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:paddingStart="30dp"
    android:paddingTop="20dp"
    android:gravity="center"
    android:paddingEnd="30dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/img_showing"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/showingImage"
        android:src="@drawable/custom_dialog___laptop" />

    <ImageView
        android:id="@+id/image_successful_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/successfulBottom"
        android:src="@drawable/save_plan_successful_bottom"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_successful_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/successfulTop"
        android:src="@drawable/save_plan_successful_top"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_showing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        tool:text="测试一下" />

</RelativeLayout>