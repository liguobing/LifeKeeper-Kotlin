<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bill_list___popup_dialog___background"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_delete_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:text="@string/popup_delete"
                android:textColor="#D50606" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/money_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/title_layout"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:text="@string/popup_money"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_bill_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:textSize="25sp"
                tool:text="+15625.00" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/money_layout"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:gravity="start"
                android:text="@string/popup_category"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_bill_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#000000"
                tool:text="哈哈哈" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/category_layout"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:gravity="start"
                android:text="@string/popup_account"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_bill_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#000000"
                tool:text="银行卡" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/account_layout"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:gravity="start"
                android:text="@string/popup_time"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_bill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="#000000"
                tool:text="2019-02-02 12:12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/time_layout"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:gravity="start"
                android:text="@string/popup_shop"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_bill_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="#000000"
                tool:text="阿撒旦发射点发射得分" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/shop_layout"
            android:layout_marginTop="0.5dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="start"
                android:text="@string/popup_remark"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_bill_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@id/remark"
                android:gravity="end"
                android:singleLine="true"
                android:textColor="#000000"
                tool:text="阿撒旦发射点发射得分阿撒旦发射点发射得分阿撒旦发射点发射得分" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_bill_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:contentDescription="@null"
        android:src="@drawable/bill_detail___bill_image" />
</RelativeLayout>
