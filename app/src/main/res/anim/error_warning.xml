<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    <objectAnimator
        android:duration="200"
        android:propertyName="translationX"
        android:valueFrom="0"
        android:valueTo="100" />
    <objectAnimator
        android:duration="200"
        android:propertyName="translationX"
        android:valueFrom="100"
        android:valueTo="-100" />
    <objectAnimator
        android:duration="200"
        android:propertyName="translationX"
        android:valueFrom="-100"
        android:valueTo="0f" />
</set>